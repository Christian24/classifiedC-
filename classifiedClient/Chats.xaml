<Window x:Class="classifiedClient.Chats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:classifiedClient"
        mc:Ignorable="d"
        Title="Chat" Height="300" Width="300">
	<Grid>
		<StackPanel>
			<WrapPanel>
				<TextBox Name="recipient" Width="233" ></TextBox>
				<Button  Content="Open Chat" Click="Button_Click"/>
			</WrapPanel>
			<ListBox Name="chats" Margin="0,0,-0.4,0" Height="251"></ListBox>
		</StackPanel>
	</Grid>
</Window>
