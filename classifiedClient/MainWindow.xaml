<Window x:Class="classifiedClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:classifiedClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<StackPanel>
			<TextBox Name="userName">Username</TextBox>
			<TextBox Name="password">Password</TextBox>
			<WrapPanel>
				<Button HorizontalAlignment="Left" Click="Button_Click">Register</Button>
				<Button HorizontalAlignment="Right" Click="Button_Click_1">Login</Button>
			</WrapPanel>
		
		</StackPanel>
    </Grid>
</Window>
